  <title>Pok√©mon Trainer Login</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap');

    body {
      background-image: url('pokemonachtergrond.png');
      background-repeat: repeat;
      background-size: 120px;
      font-family: 'Press Start 2P', cursive;
      color: white;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
    }

    .container {
      background: rgba(0, 0, 0, 0.8);
      padding: 30px;
      border-radius: 20px;
      text-align: center;
      width: 340px;
      box-shadow: 0 0 20px yellow;
      border: 2px solid #FFCB05;
    }

    h1 {
      color: #FFCB05;
      text-shadow: 2px 2px #3B4CCA;
      margin-bottom: 20px;
    }

    input {
      width: 90%;
      padding: 10px;
      margin: 10px 0;
      border: 2px solid #3B4CCA;
      border-radius: 10px;
      font-family: 'Press Start 2P', cursive;
      font-size: 10px;
      background-color: #f8f8f8;
      color: #000;
    }

    button {
      background-color: #FFCB05;
      color: #3B4CCA;
      padding: 10px 20px;
      border: none;
      font-family: 'Press Start 2P', cursive;
      border-radius: 10px;
      cursor: pointer;
      margin-top: 10px;
      font-size: 12px;
    }

    .toggle {
      margin-top: 20px;
      font-size: 10px;
      cursor: pointer;
      text-decoration: underline;
    }
  </style>
